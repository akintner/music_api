<% if @errors %>
  <% @errors.each do |error| %>
    <h3><%= error %></h3>
  <% end %>
<% end %>

<%= form_for @album, url: api_v1_create_albums_path do |f| %>
  <h2>Album Form</h2>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist %>
  <%= f.text_field :artist %>

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.submit %>
<% end %>